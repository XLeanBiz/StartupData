<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>startupDataServlet</servlet-name>
		<servlet-class>com.startupdata.server.startupdb.StartupDataServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>startupDataServlet</servlet-name>
		<url-pattern>/startupdata/startupData</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>interviewsDataServlet</servlet-name>
		<servlet-class>com.startupdata.server.interviewsdb.InterviewsDatabaseServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>interviewsDataServlet</servlet-name>
		<url-pattern>/startupdata/interviewsData</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>StartupData.html</welcome-file>
	</welcome-file-list>

</web-app>
